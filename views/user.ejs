<!DOCTYPE html>
<html>
	<head>
		<title>House Rent</title>
		<style type="text/css">
			body{
				font-family: Arial;
			}
		</style>
	</head>
	<body>

		<center>
			<h1>User Account</h1> </br><label style="color:red"> <%=message%> </label><hr> 

			
			
			<label ><a href="/home">Home</a></label>
			 
			
			
			<hr>
		     <h3 id="ActivePost">Active Post</h3>
		     <hr>
			<table cellpadding="15" cellspacing="20" border="1" rules="all" >
			<% for(var i=0; i < post.length; i++){ %>
			
							<tr>

			          <td>
			          <a href="/postdetail/<%=post[i].PostId%>"><img src="<%=post[i].Image%>" width="100" height="100"></a>
			          </td>

			          <td>
			          <b>Name:<a href="/postdetail/<%=post[i].PostId%>"><%=post[i].HouseName%></a></b></br>
			          Area:<%=post[i].AreaName%>
					</td>

				<td>
				<a href="/userAccount/deletePost/<%=post[i].PostId%>"><input type="Button" value="Delete"></a>
				<a href="/userAccount/DisablePost/<%=post[i].PostId%>"><input type="Button" value="Hired"></a>
				</td>
					
				</tr>

			<% } %>
			</table>
			<hr>

			<h3 id="InActivePost">InActive Post</h3>
			<hr>
			<table cellpadding="15" cellspacing="20" border="1" rules="all" >
			<% for(var i=0; i < posti.length; i++){ %>
			
							<tr>

			          <td>
			          <a href="/postdetail/<%=posti[i].PostId%>"><img src="<%=posti[i].Image%>" width="100" height="100"></a>
			          </td>

			          <td>
			          <b>Name:<a href="/postdetail/<%=posti[i].PostId%>"><%=posti[i].HouseName%></a></b></br>
			          Area:<%=posti[i].AreaName%>
					</td>

				<td>
				<a href="/userAccount/deletePost/<%=posti[i].PostId%>"><input type="Button" value="Delete"></a>
				<a href="/userAccount/ActivePost/<%=posti[i].PostId%>"><input type="Button" value="Available"></a>
				</td>
					
				</tr>

			<% } %>
			</table>

	
			
			
			

		</center>
	</body>

</html>